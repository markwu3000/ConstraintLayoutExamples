<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- https://developer.android.com/reference/android/support/constraint/ConstraintLayout -->
    <!-- Shift the component with Horizontal and Vertical Bias.  0 is left/up, 1 is right/down. 
    app:layout_constraintHorizontal_bias=".734"
    app:layout_constraintVertical_bias=".312"
    -->
    
    <TextView
        android:id="@+id/text_center"
        style="@style/big_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:text="@string/text1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias=".734"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".312"/>

</android.support.constraint.ConstraintLayout>