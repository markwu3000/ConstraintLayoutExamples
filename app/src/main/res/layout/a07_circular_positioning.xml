<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- https://developer.android.com/reference/android/support/constraint/ConstraintLayout#CircularPositioning
    
    You can constrain a widget center relative to another widget center, at an angle and a distance. 
    This allows you to position a widget on a circle (see Fig. 6). The following attributes can be used:

    layout_constraintCircle : references another widget id
    layout_constraintCircleRadius : the distance to the other widget center
    layout_constraintCircleAngle : which angle the widget should be at (in degrees, from 0 to 360)

    -->

    <!-- This is the center button.  All the other buttons are constrained back to here. -->
    <ImageButton
        android:id="@+id/center_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/btn_star"
        android:tint="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/out_star_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/btn_star"
        android:tint="#FF0000"
        app:layout_constraintCircle="@id/center_button"
        app:layout_constraintCircleAngle="0"
        app:layout_constraintCircleRadius="@dimen/short_radius" />

    <ImageButton
        android:id="@+id/out_star_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/btn_star"
        android:tint="#FFA500"
        app:layout_constraintCircle="@id/center_button"
        app:layout_constraintCircleAngle="45"
        app:layout_constraintCircleRadius="@dimen/short_radius" />

    <ImageButton
        android:id="@+id/out_star_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/btn_star"
        android:tint="#FFFF00"
        app:layout_constraintCircle="@id/center_button"
        app:layout_constraintCircleAngle="90"
        app:layout_constraintCircleRadius="@dimen/short_radius" />

    <ImageButton
        android:id="@+id/out_star_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/btn_star"
        android:tint="#00FF00"
        app:layout_constraintCircle="@id/center_button"
        app:layout_constraintCircleAngle="135"
        app:layout_constraintCircleRadius="@dimen/short_radius" />

    <ImageButton
        android:id="@+id/out_star_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/btn_star"
        android:tint="#0000FF"
        app:layout_constraintCircle="@id/center_button"
        app:layout_constraintCircleAngle="180"
        app:layout_constraintCircleRadius="@dimen/short_radius" />

    <ImageButton
        android:id="@+id/out_star_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/btn_star"
        android:tint="#FF00FF"
        app:layout_constraintCircle="@id/center_button"
        app:layout_constraintCircleAngle="225"
        app:layout_constraintCircleRadius="@dimen/short_radius" />

    <ImageButton
        android:id="@+id/out_star_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/btn_star"
        android:tint="#551a8b"
        app:layout_constraintCircle="@id/center_button"
        app:layout_constraintCircleAngle="270"
        app:layout_constraintCircleRadius="@dimen/short_radius" />

    <ImageButton
        android:id="@+id/out_star_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/btn_star"
        android:tint="#8b4513"
        app:layout_constraintCircle="@id/center_button"
        app:layout_constraintCircleAngle="315"
        app:layout_constraintCircleRadius="@dimen/short_radius" />

</androidx.constraintlayout.widget.ConstraintLayout>
